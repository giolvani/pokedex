{
  "root": true,
  "plugins": ["prettier", "@typescript-eslint"],
  "extends": ["next/core-web-vitals", "prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json",
    "sourceType": "module",
    "createDefaultProgram": true,
    "extraFileExtensions": [".json"]
  },
  "rules": {
    "no-console": "warn"
  },
  "prettier/prettier": [
    "error",
    {
      "bracketSpacing": true,
      "printWidth": 120,
      "singleQuote": true,
      "trailingComma": "none",
      "tabWidth": 2,
      "useTabs": false,
      "endOfLine": "auto"
    }
  ]
}
